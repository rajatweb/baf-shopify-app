// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Store model - represents a Shopify store
model Store {
  shop      String   @id // Shopify shop domain as primary key
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  settings  StoreSettings? // One-to-one relationship with StoreSettings
  activityLogs StoreActivityLogs[] // One-to-many relationship with StoreActivityLogs
}

model Session {
  id      String @id
  shop    String
  content String
  isOnline Boolean @default(false)
  @@index([shop])
}

model StoreSettings {
  shop    String @id @unique // Foreign key referencing Store.shop
  content String
  store   Store  @relation(fields: [shop], references: [shop], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StoreActivityLogs {
  id            Int      @id @default(autoincrement()) // Unique auto-incrementing ID
  shop          String   // Foreign key referencing Store.shop
  userId        Int      // The user's ID from OnlineAccessUser
  firstName     String   @map("first_name") // The user's first name
  lastName      String   @map("last_name") // The user's last name
  email         String   // The user's email address
  emailVerified Boolean  @map("email_verified") @default(false) // Whether the user has verified their email
  accountOwner  Boolean  @map("account_owner") @default(false) // Whether the user is the account owner
  locale        String   // The user's locale
  activityType  String
  collaborator  Boolean  @default(false) // Whether the user is a collaborator
  createdAt     DateTime @default(now()) // When the activity was logged
  store         Store    @relation(fields: [shop], references: [shop], onDelete: Cascade)
  
  @@index([shop])
  @@index([userId])
  @@index([createdAt])
  @@map("store_activity_logs")
}

